@model IEnumerable<CourseProgressViewModel>
    <h2>Statistics</h2>
    @foreach (var item in Model)
    {
        <div class="statistics">
            <p>@item.CourseName</p>
            <div class="progress">
                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: @item.CourseProgress%">
                    @item.CourseProgress%
                </div>
            </div>
        </div>
    }
